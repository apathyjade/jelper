{  
  "compilerOptions": {
    "lib": ["es5", "es6", "dom"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true,
    "sourceMap": false,
    "skipLibCheck": true,
    "strict": true,
    "target": "es6",
    "outDir": "./lib",
    "jsx": "react",
    "declaration": true,
    "declarationDir": "./types"
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.d.ts", "src/__tests__/index.test.tsx"],
}